/* pages/rooms/rooms.wxss */
.container {
  padding: 0 0 40rpx 0;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.back-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #333;
}

.search-input-container {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  flex: 1;
  margin: 0 20rpx;
  height: 60rpx;
  font-size: 28rpx;
}

/* 预订信息卡片 */
.booking-info {
  margin: 30rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.booking-detail {
  display: flex;
  flex-direction: column;
}

.date-range {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.guest-info {
  font-size: 26rpx;
  color: #666;
}

.modify-btn {
  color: var(--primary-color);
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border: 1rpx solid var(--primary-color);
  border-radius: 30rpx;
}

/* 过滤标签 */
.filter-scroll {
  background-color: #fff;
  padding: 20rpx 0;
  white-space: nowrap;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-tags {
  display: flex;
  padding: 0 30rpx;
}

.filter-tag {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.filter-tag.active {
  background-color: var(--primary-color);
  color: #fff;
}

/* 房间列表 */
.room-list {
  padding: 30rpx;
}

.room-card {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.room-image-container {
  position: relative;
  height: 400rpx;
}

.room-image {
  width: 100%;
  height: 100%;
}

.room-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: var(--primary-color);
  color: #fff;
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 6rpx;
}

.room-info {
  padding: 30rpx;
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.room-name {
  font-size: 34rpx;
  font-weight: bold;
}

.heart-icon {
  width: 40rpx;
  height: 40rpx;
}

.room-detail {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.room-services {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.service-tag {
  background-color: rgba(157, 130, 82, 0.1);
  color: var(--primary-color);
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.room-price-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.room-price {
  display: flex;
  align-items: baseline;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.price-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.book-btn {
  background-color: var(--primary-color);
  color: #fff;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}