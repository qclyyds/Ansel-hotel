/**index.wxss**/
.container {
  padding: 0 0 120rpx 0;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.hotel-name {
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.header-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 480rpx;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-text {
  position: absolute;
  bottom: 60rpx;
  left: 40rpx;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.banner-title {
  font-size: 46rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.banner-subtitle {
  font-size: 32rpx;
}

/* 预订区域 */
.booking-section {
  margin: 30rpx;
  padding: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.date-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.date-box {
  flex: 1;
}

.date-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.date-value {
  font-size: 30rpx;
  font-weight: 500;
}

.date-arrow {
  margin: 0 20rpx;
  color: #999;
}

.guest-section {
  margin-bottom: 30rpx;
}

.guest-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.guest-value {
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.selector-icon {
  font-size: 24rpx;
  color: #999;
}

.promotion-code {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 26rpx;
}

.search-btn {
  width: 100%;
}

/* 房型推荐 */
.section {
  margin: 40rpx 0;
  padding: 0 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-all {
  font-size: 26rpx;
  color: var(--primary-color);
}

.room-scroll {
  white-space: nowrap;
  margin: 0 -30rpx;
  padding: 0 30rpx;
}

.room-card {
  display: inline-block;
  width: 580rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.room-image {
  width: 580rpx;
  height: 320rpx;
}

.room-info {
  padding: 20rpx;
}

.room-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.room-brief {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.room-price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.price-unit {
  font-size: 24rpx;
  font-weight: normal;
}

/* 酒店服务 */
.services-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.service-name {
  font-size: 26rpx;
  text-align: center;
}

/* 关于酒店 */
.about-section {
  margin: 40rpx 30rpx;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  height: 400rpx;
}

.about-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.7);
}

.about-content {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  color: #fff;
}

.about-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.about-desc {
  font-size: 28rpx;
  margin-bottom: 30rpx;
  max-width: 80%;
}

.about-btn {
  display: inline-block;
  padding: 12rpx 40rpx;
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 底部客服 */
.customer-service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(157, 130, 82, 0.3);
}

.cs-icon {
  width: 50rpx;
  height: 50rpx;
}
