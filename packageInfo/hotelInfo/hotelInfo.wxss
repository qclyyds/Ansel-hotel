/* pages/hotelInfo/hotelInfo.wxss */
.container {
  padding-bottom: 40rpx;
  background-color: #f8f8f8;
}

/* 轮播图 */
.hotel-swiper {
  width: 100%;
  height: 450rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 酒店名称 */
.hotel-title {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 标签页导航 */
.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 99;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-color);
}

.tab-content {
  padding: 30rpx;
}

/* 酒店简介内容 */
.intro-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.address-card, .contact-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.address-title, .contact-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.address-content, .contact-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-text, .contact-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.address-actions {
  display: flex;
}

.action-btn, .contact-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

/* 设施服务内容 */
.facilities-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.facility-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.facility-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.facility-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.facilities-note {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.note-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.note-item {
  display: flex;
  margin-bottom: 16rpx;
}

.note-label {
  font-size: 28rpx;
  color: #333;
  width: 160rpx;
}

.note-value {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.dining-promo {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-left: 4rpx solid var(--primary-color, #9d8252);
}

.promo-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.promo-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.promo-link {
  font-size: 26rpx;
  color: var(--primary-color, #9d8252);
  text-align: right;
}

/* 位置交通内容 */
.map-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.map {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.map-actions {
  display: flex;
  justify-content: center;
}

.map-btn {
  display: inline-block;
  background-color: var(--primary-color);
  color: #fff;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.transportation-section, .attractions-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.transport-list, .attractions-list {
  margin-top: 20rpx;
}

.transport-item {
  margin-bottom: 20rpx;
}

.transport-type {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.transport-info {
  font-size: 26rpx;
  color: #666;
}

.attraction-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.attraction-item:last-child {
  border-bottom: none;
}

.attraction-name {
  font-size: 28rpx;
  color: #333;
}

.attraction-distance {
  font-size: 26rpx;
  color: var(--primary-color);
} 