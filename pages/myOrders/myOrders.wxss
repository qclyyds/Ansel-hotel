/* pages/myOrders/myOrders.wxss */
.container {
  padding: 0 0 40rpx 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 标签栏 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1px solid #f0f0f0;
  position: sticky;
  top: 70rpx;
  z-index: 99;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-color);
}

/* 订单列表 */
.order-list {
  padding: 30rpx;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(157, 130, 82, 0.3);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

/* 订单项 */
.order-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.order-number {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

.order-status.pending {
  color: #ff9500;
}

.order-status.completed {
  color: var(--primary-color);
}

.order-status.cancelled {
  color: #999;
}

/* 房间信息 */
.room-info {
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.room-image {
  width: 180rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.room-details {
  flex: 1;
}

.room-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.room-date {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.room-price {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--primary-color);
}

/* 订单底部 */
.order-footer {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-actions {
  display: flex;
}

.action-btn {
  margin-left: 20rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #ddd;
  border-radius: 30rpx;
  background-color: #fff;
  color: #666;
  font-size: 24rpx;
  min-width: 140rpx;
}

.action-btn.primary {
  background-color: var(--primary-color);
  color: #fff;
  border-color: var(--primary-color);
}