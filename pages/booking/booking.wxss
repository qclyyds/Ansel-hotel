/* pages/booking/booking.wxss */
.container {
  padding: 0 0 130rpx 0;
  background-color: #f8f8f8;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.back-icon {
  font-size: 40rpx;
  padding: 10rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: 500;
}

/* 房间信息卡片 */
.room-info {
  margin: 30rpx;
}

.room-image {
  width: 150rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.room-brief {
  flex: 1;
}

.room-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.room-spec {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.room-price {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.price-unit {
  font-size: 22rpx;
  font-weight: normal;
  color: #999;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

/* 入住信息 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f9f9f9;
}

.info-label {
  font-size: 28rpx;
  color: #333;
}

.info-value {
  font-size: 28rpx;
  color: #666;
}

.picker-value {
  display: flex;
  align-items: center;
}

.arrow-icon {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 入住人信息 */
.input-item {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.input-field {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.textarea-field {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
}

/* 支付方式 */
.payment-options {
  display: flex;
  justify-content: space-between;
}

.payment-option {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 31%;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  transition: all 0.2s;
}

.payment-option.active {
  background-color: rgba(157, 130, 82, 0.1);
  border: 1px solid var(--primary-color);
}

.payment-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.payment-name {
  font-size: 24rpx;
  color: #333;
}

.check-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
}

.check-icon::after {
  content: "";
  position: absolute;
  top: 8rpx;
  left: 10rpx;
  width: 10rpx;
  height: 6rpx;
  border-left: 2rpx solid #fff;
  border-bottom: 2rpx solid #fff;
  transform: rotate(-45deg);
}

/* 优惠信息 */
.discount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f9f9f9;
}

.discount-left {
  flex: 1;
}

.discount-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.discount-desc {
  font-size: 24rpx;
  color: #999;
}

/* 取消政策 */
.policy-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.agreement-checkbox {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin-right: 16rpx;
  position: relative;
}

.checkbox.checked {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
}

.checkbox.checked::after {
  content: "";
  position: absolute;
  top: 8rpx;
  left: 12rpx;
  width: 12rpx;
  height: 8rpx;
  border-left: 3rpx solid #fff;
  border-bottom: 3rpx solid #fff;
  transform: rotate(-45deg);
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
}

.link-text {
  color: var(--primary-color);
}

/* 底部价格栏 */
.price-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
}

.price-info {
  flex: 1;
}

.total-price {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.price-detail {
  font-size: 24rpx;
  color: #ff6b6b;
}

.submit-btn {
  background-color: var(--primary-color);
  color: #fff;
  padding: 0 40rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

/* 优惠券弹窗 */
.coupon-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.coupon-popup.show {
  visibility: visible;
  opacity: 1;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.coupon-popup.show .popup-content {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 500;
}

.close-icon {
  font-size: 40rpx;
  color: #999;
}

.coupon-list {
  max-height: 70vh;
  overflow-y: auto;
  padding: 0 30rpx 30rpx;
}

.no-coupon {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.coupon-item {
  display: flex;
  margin-top: 30rpx;
  background: linear-gradient(to right, var(--primary-color), rgba(157, 130, 82, 0.8));
  border-radius: 10rpx;
  color: #fff;
  position: relative;
}

.coupon-left {
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1px dashed rgba(255, 255, 255, 0.3);
  padding: 20rpx 0;
}

.coupon-value {
  font-size:
  40rpx;
  font-weight: bold;
}

.coupon-right {
  flex: 1;
  padding: 20rpx;
}

.coupon-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.coupon-expire {
  font-size: 24rpx;
  opacity: 0.8;
}

.coupon-check {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #fff;
  color: var(--primary-color);
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}